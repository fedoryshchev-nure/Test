@model IEnumerable<Task2.Models.CarOwnerDB.Owner>

@{
    ViewData["Title"] = "View";
}

<h1>
    Owners
</h1>

<h3>
    <a asp-action="CreateOwner">Create New</a>
</h3>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    Year of Birth
                </th>
                <th>
                    Driving experience in days
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DrivingExperienceDays)
            </td>
            <td>
                <a asp-action="OwnerCar" asp-route-id="@item.Id">List of cars</a> |
                <a asp-action="EditOwner" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="DeleteOwner" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
